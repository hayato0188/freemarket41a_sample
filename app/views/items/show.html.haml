.single-container
  %header.single-header
    %h1= link_to image_tag("logo.svg"),root_path

  %main.single-main
    %section
      .common-container
        .common-container-inner
          %h2.common-container-inner__head
            住所入力
          = form_for (@item) do |f|
            .common-container-inner__content.user-container-inner__content
              = render partial: "partial/forms/input-field", locals:{ label_name:"お名前", column: :name, placeholder: "例）新垣", maxlength: 10}
              = render partial: "partial/forms/input-form", locals:{column: :name, placeholder: "例）結衣", maxlength: 10}
              = render partial: "partial/forms/input-field", locals:{ label_name:"お名前", column: :name, placeholder: "例）アラガキ", maxlength: 12}
              = render partial: "partial/forms/input-form", locals:{column: :name, placeholder: "例）ユイ", maxlength: 12}
              = render partial: "partial/forms/input-field", locals:{ label_name:"郵便番号", column: :name, placeholder: "例）100-8176", maxlength: 8}
              = render partial: "partial/forms/select-form", locals:{ label_name:"都道府県", column: :status, selects: ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"]}
              = render partial: "partial/forms/input-field", locals:{ label_name:"市区町村", column: :name, placeholder: "例）千代田区大手町", maxlength: 8}
              = render partial: "partial/forms/input-field", locals:{ label_name:"番地", column: :name, placeholder: "例）1-5-5", maxlength: 8}
              .form-wrapper
                %label
                  建物名
                  %span.form-require
                    任意
              = render partial: "partial/forms/input-form", locals:{column: :name, placeholder: "例）大手町タワー", maxlength: 10}
              .form-wrapper
                %label
                  電話
                  %span.form-require
                    任意
              = render partial: "partial/forms/input-form", locals:{column: :name, placeholder: "例）03-3214-1111", maxlength: 10}
              .btn-content
                = f.submit '次へ進む', disable_with: '保存中', class: "btn-red"

%main.single-main
  %section
    .common-container
      .common-container-inner
        %h2.common-container-inner__head
          支払い方法
        = form_for (@item) do |f|
          .common-container-inner__content.user-container-inner__content
            .form-wrapper
              %label
                カード番号
                %span.form-require
                  必須
            = f.number_field :name, placeholder: "半角数字のみ", class: "input-default", maxlength: 12
            .form-wrapper
              %label
                有効期限
                %span.form-require
                  必須
            %div
              = f.date_select :name, discard_year: true, discard_day: true, use_month_numbers: true
              月
            %div
              = f.date_select :name, discard_month: true, discard_day: true, start_year: Time.now.year,
              end_year: Time.now.year + 10
              年
            .form-wrapper
              %label
                セキュリティコード
                %span.form-require
                  必須
            = f.number_field :name, placeholder: "カード背面4桁もしくは3桁の番号", class: "input-default", maxlength: 4
            .btn-content
              = f.submit '次へ進む', disable_with: '保存中', class: "btn-red"
